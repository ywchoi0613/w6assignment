#include <iostream>
#include <fstream>
using namespace std;
short music[1000];
int main() {
	ifstream xx("holdonadele.wav", ios::binary | ios::in);
	if (!xx) return 666;
	xx.read((char*)music, 2000);
	xx.close();
	ofstream aaa("data.txt");
	float dt = 1. / 48000;
	for (int i = 0; i < 500; i++) {
		aaa << i * dt << " " << music[i*2] << " " << music[i*2+1] << endl;
	}
}
